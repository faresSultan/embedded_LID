#include<stdio.h>

int main()
{
	float arr[100]={0},avg=0;
	int size =0,i;
	printf("Enter the number of data: ");
	fflush(stdout);
	scanf(" %d",&size);
	fflush(stdin);

	for(i=0;i<size;i++)
	{

		printf("\nEnter number: ");
		scanf("%f", &arr[i]);
		fflush(stdout);fflush(stdin);
		avg += arr[i];
	}
	avg /= size;
	printf("Avrage = %f",avg);







return 0;
}


