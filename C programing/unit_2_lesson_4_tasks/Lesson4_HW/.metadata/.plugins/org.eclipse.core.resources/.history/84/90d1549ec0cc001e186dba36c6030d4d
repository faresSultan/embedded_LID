#include<stdio.h>

int main()
{

	float a[2][2],b[2][2],sum[2][2];
	int i,j;

	printf("Enter the Elements of the first Matrix\n\n");
	fflush(stdout);
	for (i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
			printf("\nEnter the element a[%d][%d]: ",i+1,j+1);
			fflush(stdout);fflush(stdin);
			scanf("%f",&a[i][j]);
		}

	}

	printf("\nEnter the Elements of the second Matrix\n\n");
	fflush(stdout);
	for (i=0;i<2;i++)
	{
			for(j=0;j<2;j++)
			{
				printf("\nEnter the element b[%d][%d]: ",i+1,j+1);
				fflush(stdout);fflush(stdin);
				scanf(" %f",&b[i][j]);
			}

	}



	for (i=0;i<2;i++)
	{
				for(j=0;j<2;j++)
				{
					sum[i][j] = a[i][j] + b[i][j];
				}

	}
	printf("\nThe Sum of Matrix is: %d",sum);

	for (i=0;i<2;i++)
		{
				for(j=0;j<2;j++)
				{
					printf("%f\t",sum[i][j]);
					fflush(stdout);
				}
				printf("\n");
				fflush(stdout);

		}










return 0;
}

